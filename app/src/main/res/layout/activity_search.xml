<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SearchActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_timKiem"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_200"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Tìm kiếm"></androidx.appcompat.widget.Toolbar>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_timKiem"
        android:id="@+id/edt_timKiem"
        android:layout_margin="10sp"
        android:hint="Nhập tên sản phẩm muốn tìm"></EditText>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_margin="5sp"
        android:layout_height="0sp"
        app:layout_constraintTop_toBottomOf="@id/edt_timKiem"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/recycleView_timKiem"></androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>